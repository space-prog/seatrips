mixin card(oneCard)
  figure 
    figcaption 
      .flex.center 
          if flagged
            img(src=oneCard.img, alt=oneCard.alt).figImg.flagged
          else if veloflaged
            img(src=oneCard.img, alt=oneCard.alt).figImg.veloflagged
          else 
            img(src=oneCard.img, alt=oneCard.alt).figImg
      p.mainTextCards #{oneCard.mainText}
      p.secondTextCards #{oneCard.secondText}
      .row
        .col
          p.text-primary-emphasis #{oneCard.price}
        .col 
          a(href="#") Замовити 
            span 
              img(src="img/arrow2.svg", alt="arrow")